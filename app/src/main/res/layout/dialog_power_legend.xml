<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_height="1dp"
            android:layout_width="10dp"
            android:background="@color/colorAccent" />
        <TextView
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            style="@style/textSmall"
            android:text="屏幕点亮"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_height="1dp"
            android:layout_width="10dp"
            android:background="#808080" />
        <TextView
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            style="@style/textSmall"
            android:text="屏幕关闭"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/legend_dotted_line"
            android:scaleType="centerInside"
            android:layout_height="10dp"
            android:layout_width="10dp"
            app:tint="@color/colorAccent" />
        <TextView
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            style="@style/textSmall"
            android:text="屏幕点亮，未记录电池状态"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/legend_dotted_line"
            android:scaleType="centerInside"
            android:layout_height="10dp"
            android:layout_width="10dp" />
        <TextView
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            style="@style/textSmall"
            android:text="屏幕关闭，未记录电池状态"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@drawable/in_card_item"
        android:padding="@dimen/activity_vertical_margin"
        style="@style/textSmall"
        android:text="在手机屏幕关闭时，Scene会停止记录电池状态以减少耗电，在图表中显示为灰色虚线。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:background="@drawable/in_card_item"
        android:padding="@dimen/activity_vertical_margin"
        style="@style/textSmall"
        android:text="但如果图表中出现蓝色虚线，Scene后台进程被休眠，未能按计划的频率记录电池状态。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>