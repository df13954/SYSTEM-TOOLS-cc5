<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/dialog_addin_device_warn"
        android:textColor="?android:colorAccent"
        android:textSize="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/in_card_item_inactive"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp">

        <TextView
            style="@style/textSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ro_product_model" />

        <EditText
            android:id="@+id/dialog_addin_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/in_card_item_inactive"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp">

        <TextView
            style="@style/textSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ro_product_brand" />

        <EditText
            android:id="@+id/dialog_addin_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/in_card_item_inactive"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp">

        <TextView
            style="@style/textSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ro_product_name" />

        <EditText
            android:id="@+id/dialog_addin_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/in_card_item_inactive"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp">

        <TextView
            style="@style/textSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ro_product_device" />

        <EditText
            android:id="@+id/dialog_addin_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="text" />
    </LinearLayout>
    <!--<EditText
        android:id="@+id/dialog_addin_product"
        android:hint="ro.build.product="
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/in_card_item_inactive"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp">

        <TextView
            style="@style/textSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ro_product_manufacturer" />

        <EditText
            android:id="@+id/dialog_addin_manufacturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_chooser"
            style="@style/SceneButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:text="选择模板"
            android:textSize="11dp" />

        <Button
            android:id="@+id/dialog_addin_default"
            style="@style/SceneButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="6dp"
            android:text="还原"
            android:textSize="11dp" />
    </LinearLayout>

    <TextView
        style="@style/textSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="警告：修改机型可能导致无法开机，或部分功能不能使用！"
        android:textColor="@android:color/holo_red_dark" />

</LinearLayout>